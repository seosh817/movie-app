<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tv"
            type="io.github.slflfl12.presentation.model.TvPresentationModel" />

        <variable
            name="palette"
            type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_tv_container"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:foreground="?attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_tv_poster"
            palette="@{palette}"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star"
            app:bindImage="@{tv.posterPath}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"

            android:paddingHorizontal="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/new_text"
                android:textAppearance="@style/ChipTextStyle"
                android:textColor="@color/white"
                android:visibility="gone"
                app:chipBackgroundColor="@color/colorAccent"
                app:visibilityByReleaseDate="@{tv.firstAirDate}"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popular_text"
                android:textAppearance="@style/ChipTextStyle"
                android:textColor="@color/white"
                android:visibility="gone"
                app:chipBackgroundColor="@color/colorAccent"
                app:visibilityByPopular="@{tv.voteAverage}"
                tools:visibility="visible" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_poster_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.7"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_tv_poster">

            <TextView
                android:id="@+id/tv_poster_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@{tv.name}"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>